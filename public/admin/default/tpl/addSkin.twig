{% extends 'templates/main.twig' %}


{% block content %}

<ul class="nav">
  <li class="nav-item">
    <a class="nav-link" href="{{ path_for('admin.skinlist') }}">Skin List</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="#">Add skin</a>
  </li>
</ul>

     {% for skin in skins %}
		<p><form action="{{ path_for('admin.add.skin.post') }}" method="post"><input type="hidden" id="skin_name" name="skin_name" value="{{ skin }}">{{ skin }}<input type="submit" value="Submit"></form></p>
	{% endfor %}
{% if not skins %}

<div class="alert alert-warning" role="alert">
  <strong>All skins are installed in your board.</strong>
</div>

{% endif %}

  
{% endblock %}