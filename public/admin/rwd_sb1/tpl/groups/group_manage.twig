{% extends 'templates/main.twig' %}


{% block content %}
<div class="row">
	<ul class="nav">
	  <li class="nav-item">
		<a class="nav-link active" href="{{ path_for('admin.groups') }}">back</a>
	  </li>
	</ul>
</div><hr />
        <form action="{{ path_for('admin.groups.post') }}" method="post">
		  <div class="form-group">
			<label for="htmlInput">HTML code</label>
			<input type="text" class="form-control" id="htmlInput" name="html" aria-describedby="htmlHelp" value="{% if group.username_html %}{{ group.username_html }}{% else %}{{ "%s"|format('{{username}}') }}{% endif %}">
			<small id="htmlHelp" class="form-text text-muted">you have to add {{username}} here</small>
		  </div>
		  <div class="form-group">
			<label for="nameInput">Group name</label>
			<input type="text" class="form-control" id="nameInput" name="name" value="{{ group.grupe_name }}">
		  </div>
		  <div class="form-group">
			<label for="group_lvl">Group Level</label>
			<select class="form-control" id="group_lvl" name="grupe_level">
			 {% for i in 0..10 %}
				<option value="{{ i }}" {% if i == group.grupe_level %}selected{% endif %}>{{ i }}</option>
			{% endfor %}
			</select>
		  </div>
		  
		  <button type="submit" class="btn btn-primary">Submit</button>
		  {% if group.id %}
			<input type="hidden" name="id" value="{{ group.id }}">
		  {% endif %}
		</form>
		
{% endblock %}