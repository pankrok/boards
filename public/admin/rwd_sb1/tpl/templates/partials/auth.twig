
<div class="row mx-auto p-4">
    <div class="col-12 mx-auto">
        <div class="card panel-default">
            <div class="card-header">{{ trans('Sign in') }}</div>
            <div class="card-body">
                {% if admin2fa %}
                <form action="{{ path_for('auth.signin') }}" method="post">
                <input type="hidden" id="admin" name="admin" value="admin">
                        <div class="form-group">
                            <label for="tfa">{{ trans('two factore code') }}</label>
                            <input type="text" name="tfa" id="tfa" class="form-control" aria-describedby="tfaHelp" >
                            <small id="tfaHelp" class="form-text text-muted"><a href="{{ path_for('admin.home.tfa', {'mail': 1}) }}">{{ trans('application not working? Click here!') }}</a></small>
                        </div>
                            <input type="hidden" name="login" id="login" value="{{ username }}" >
                        <button type="submint" class="btn btn-dark">{{ trans('Sign in') }}</button>      
                </form>
                {% else %}
                <form action="{{ path_for('auth.signin') }}" method="post">
                    <div class="form-group">
                        <label for="login">{{ trans('Login or mail') }}</label>
                         <input type="hidden" id="admin" name="admin" value="admin">
                        <input type="text" name="login" id="login" placeholder="{{ trans('mail@domain.com') }}" class="form-control {{ errors.login ? 'is-invalid' : ''}}" value="{{ old.login }}">
                        <span class="invalid-feedback">{{ errors.login | first }}</span>
                    </div>
                    <div class="form-group">
                        <label for="password">{{ trans('Password') }}</label>
                        <input type="password" name="password" id="password"  class="form-control {{ errors.password ? 'is-invalid' : ''}}" value="{{ old.password }}">
                         <span class="invalid-feedback">{{ errors.password | first }}</span>
                    </div>
                        
                    <button type="submint" class="btn btn-dark">{{ trans('Sign in') }}</button>
                </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>
