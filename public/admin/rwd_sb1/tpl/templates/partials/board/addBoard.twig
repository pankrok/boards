
<div class="p-2">
<form action="{{ path_for('admin.add.board') }}" method="post" id="addBoard">
  <div class="row">
		<div class="form-group col-3">
		<label for="SelectCategory">{{ trans('admin.select category') }}:</label>
		<select class="form-control" id="SelectCategory" name="cat_id">
		  {% for category in categories %}
		  <option value="{{ category.id }}" {% if category.id == data.id %}selected{% endif %}>{{ stripTags(category.name) }}</option>	  
		  {% endfor %}
		</select>
	  </div>
     <div class="form-group col-2">
		<label for="SelectCategory">{{ trans('admin.select parent board') }}:</label>
		<select class="form-control" id="SelectParent" name="parent_id">
          <option value="" selected> </option>
		  {% for parent in parents %}
            <option value="{{ parent.id }}">{{ stripTags(parent.board_name) }}</option>	  
		  {% endfor %}
		</select>
	  </div>
	  <div class="form-group col-3">
		<label for="boardName">{{ trans('admin.board name') }}</label>
		<input type="text" class="form-control" id="boardName" name="name" value="{{ data.board_name }}">
	  </div>
	  <div class="form-group col-2">
		<label for="boardOrder">{{ trans('admin.order') }}</label>
		<input type="text" class="form-control" id="boardOrder" name="order" value="{{ data.board_order }}">
	  </div>
	  <div class="control-group col-2 mt-4">
	  <label class="control control-checkbox mt-2" for="Active">{{ trans('admin.active') }}
		<input type="checkbox" id="Active" name="visability" checked>
		<div class="control_indicator mt-1"></div>
	  </label>
	  </div>
  </div> 
  <div class="form-group">
    <label for="BoardDesc">{{ trans('admin.board description') }}</label>
    <textarea class="form-control" id="BoardDesc" rows="3" name="desc"></textarea>
  </div>
  <div>
      <button type="submit" class="btn btn-primary">{{ trans('admin.submit') }}</button>
   </div>
</form>
</div>

{% block endcontent %}
<link rel="stylesheet" href="{{ base_url() }}/public/css/jodit.min.css">
<script src="{{base_url() }}/public/scripts/jodit.min.js"></script>
<script>
var editor = new Jodit('#BoardDesc', {
	langusage: 'pl',
    autofocus: true,
	height: "280",
	buttons: ",,,,,,,,,,,,,,,,,,,,,,,,,link,|,align,undo,redo,|,selectall,cut,copy,paste,copyformat,|,hr,symbol,fullsize,print,preview,find,about",
	toolbarAdaptive: true,
	allowResizeX: false,
    allowResizeY: false
});
</script>
{% endblock %}
