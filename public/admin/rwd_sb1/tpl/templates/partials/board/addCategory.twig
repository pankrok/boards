<div class="p-2">
	<form action="{{ path_for('admin.add.category') }}" method="post" id="addCategory">
	  <div class="row">
		<div class="col p-1">
		  <small id="nameHelp" class="form-text text-muted text-center">{{ trans('category name') }}.</small>
		  <input type="text"  aria-describedby="nameHelp" class="form-control" placeholder="{{ trans('category name') }}" name="name" value="{{ category.name }}">
		
		</div>
		<div class="col p-1">
		 <small id="orderHelp" class="form-text text-muted text-center">{{ trans('order') }}.</small>
		  <input type="text" aria-describedby="orderHelp" class="form-control" placeholder="{{ trans('order') }}" name="order" value="{{ category.category_order }}">
		 
		</div>
		<div class="col p-1 mx-4 mt-4">
			<label class="control control-checkbox" for="active">{{ trans('active') }}
				<input type="checkbox" id="active" class="form-check-input" name="active" checked>
				<div class="control_indicator mt-1"></div>
			</label>
		</div>
		<div class="col mt-3 p-1">
		  <button type="submit" class="btn btn-primary">{{ trans('submit') }}</button>
		</div>
		</div>
	</form>
	</div>