

{% extends 'templates/main.twig' %}


{% block content %}

<nav>
  <div class="nav nav-tabs" id="nav-tab" role="tablist">
    <a class="nav-link active" id="nav-twig-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">TWIF file</a>
    <a class="nav-link" id="nav-css-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">CSS file</a>
    <a class="nav-link" id="nav-js-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">JS file</a>
  </div>
</nav>
<div class="tab-content" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-twig-tab">
  <form action="{{ path_for('admin.skin.addfile.post') }}" method="post">
  <div class="form-group">
    <label for="file">File name (without extension .twig!)</label>
    <input type="text" name="file" class="form-control" id="file">
	<input type="hidden" name="extension" value=".twig">
	<input type="hidden" name="skin_id" value="{{ skin_id }}">
  </div>
  <div class="form-group">
    <label for="directory">Directory</label>
    <select name="dir" class="form-control" id="directory">
     {% for directory in dir_list %}
		<option value="{{ directory }}">{{ directory }}</option>
	 {% endfor %}
    </select>
  </div>
  <button type="submit" class="btn btn-primary float-right">Submit</button>
  </form>
  
  </div>
  <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-css-tab">
  <form action="{{ path_for('admin.skin.addfile.post') }}" method="post">
  <div class="form-group">
    <label for="file">File name (without extension .css!)</label>
    <input type="text" name="file" class="form-control" id="file">
	<input type="hidden" name="extension" value=".css">
	<input type="hidden" name="dir" value="{{ main_skin_dir }}/assets/css">
	<input type="hidden" name="skin_id" value="{{ skin_id }}">
  </div>
  <button type="submit" class="btn btn-primary float-right">Submit</button>
  </form>
  </div>
  <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-js-tab">
  <form action="{{ path_for('admin.skin.addfile.post') }}" method="post">
  <div class="form-group">
    <label for="file">File name (without extension .js!)</label>
    <input type="text" name="file" class="form-control" id="file">
	<input type="hidden" name="extension" value=".js">
	<input type="hidden" name="dir" value="{{ main_skin_dir }}/assets/js">
	<input type="hidden" name="skin_id" value="{{ skin_id }}">
  </div>
  <button type="submit" class="btn btn-primary float-right">Submit</button>
  </form>
  
  </div>
</div>

  
{% endblock %}