{% extends 'templates/main.twig' %}


{% block content %}
<nav class="nav">
  <a class="nav-link active" href="{{ path_for('admin.boards') }}">Back</a>
</nav>
	  
	  
	<div class="p-2">
	<form action="{{ path_for('admin.edit.category', {'id': category.id}) }}" method="post" id="addCategory">
	  <div class="row">
		<div class="col-5-md p-1">
		  <input type="text" class="form-control" placeholder="{{ trans('admin.category name') }}" name="name" value="{{ category.name }}">
		</div>
		<div class="col-5-md p-1">
		  <input type="text" class="form-control" placeholder="{{ trans('admin.order') }}" name="order" value="{{ category.category_order }}">
		</div>
		<div class="col-2-md p-1">
		  <button type="submit" class="btn btn-primary">{{ trans('admin.submit') }}</button>
		</div>
	  </div>
	  <div class="form-check">
			<input type="checkbox" class="form-check-input" name="active" {% if category.acrive %}checked{% endif %}>
			<label class="form-check-label" for="exampleCheck1">{{ trans('admin.active') }}</label>
		</div>
	</form>
	</div>
		
{% endblock %}