{% extends 'templates/main.twig' %}


{% block content %}
<nav class="nav">
  <a class="nav-link active" href="{{ path_for('admin.boards') }}">{{ trans('admin.back') }}</a>
</nav>
	  
	  
	<div class="p-2">
	<form action="{{ path_for('admin.edit.category', {'id': category.id}) }}" method="post" id="addCategory">
    <input type="hidden" name="category_id" value="{{ category.id }}">
	  <div class="row">
		<div class="col p-1">
		  <small id="nameHelp" class="form-text text-muted text-center">{{ trans('admin.category name') }}.</small>
		  <input type="text"  aria-describedby="nameHelp" class="form-control" placeholder="{{ trans('admin.category name') }}" name="name" value="{{ category.name }}">
		
		</div>
		<div class="col p-1">
		 <small id="orderHelp" class="form-text text-muted text-center">{{ trans('admin.order') }}.</small>
		  <input type="text" aria-describedby="orderHelp" class="form-control" placeholder="{{ trans('admin.order') }}" name="order" value="{{ category.category_order }}">
		 
		</div>
		<div class="col p-1 mx-4 mt-4">
			<label class="control control-checkbox" for="active">{{ trans('admin.active') }}
				<input type="checkbox" id="active" class="form-check-input" name="visability" {% if category.active %}checked{% endif %}>
				<div class="control_indicator mt-1"></div>
			</label>
		</div>
		<div class="col mt-3 p-1">
		  <button type="submit" class="btn btn-primary">{{ trans('admin.submit') }}</button>
		</div>
	  
	  
		</div>
	</form>
	</div>
		
{% endblock %}