{% extends 'templates/main.twig' %}

{% block content %}
	{% include 'templates/partials/pagination.twig' %}	
	<div class="row">
	{% include 'templates/partials/modules.twig' %}
	<!-- main board -->
	
	<div class="col-lg order-1">
	 <div class="row">
    {% include 'templates/partials/inside-modules.twig' %}
    <div class="col order-1">			
		{% if users %}
		<div class="card-header"><i class="fas fa-users"></i> UÅ¼ytkownicy</div>
		<div class="card-body px-0 py-1 collapse show" id="board-{{ category.cat_id }}">
					<ul class="list-group list-group-flush">

						{% for user in users %}
						<li class="list-group-item {% if board.board_order is even %}bg-white{% else %}bg-light{% endif %}">
							<div class="row w-100">
							<div class="col-2 col-md-1 pl-3 {{ board.read }} text-center">
							<img src="{{ user.avatar }}" class="rounded-circle chat-av" alt="{{ user.username }}" >
							</div>
							<div class="col-10 col-md-5">
								<div class="row">
									<div class="col-12 fs-15"><a href="{{ user.url }}">{{ user.username_html |raw }}</a></div>
									<div class="col-12 fs-12">{{ user.group_name |raw }}</div>
								</div>
							</div>
							<div class="col float-right d-none d-md-block text-right">od: {{ user.created_at }}<br/>aktywny: {{ user.last_active|date("Y-m-d H:m:i") }}</div>
							</div>
						</li>
						{% endfor %}
						<!-- /one board -->							
					</ul>
		</div>
		{% endif %}
	</div>

	<!-- /main board -->

	
    <div class="col-12 order-3">
	{% include 'templates/partials/pagination.twig' %}	
    </div>
    </div>	
    </div>
</div>
