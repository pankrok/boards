{% extends 'templates/main.twig' %}

{% block content %}

	<div class="row">

	<!-- main register -->
	<div class="col-lg-12 order-1">
		{{ plugin_foo | raw }}
		<div class="card border-light">
			<div class="card-header">
				<div class="float-left"><h1><i class="fas fa-user-plus"></i> {{ trans('Forgot Password') }}</h1></div>
				
			</div>
				<div class="card-body px-0 py-1" id="board-1">
				
					<div class="row">
						<div class="col-md-12 mx-auto">							
								<div class="card m-2">
								  <div class="card-header">
									{{ trans('Forgot Password') }}
								 </div>
								  <div class="card-body">
                                  <form action="{{ path_for('auth.forget.pass.post') }}" method="post">
									 <div class="form-group">
										<label for="email">{{ trans('email') }}</label>
										<input type="text" name="email" id="email" class="form-control {{ errors.email ? 'is-invalid' : ''}}" value="{{ old.email }}">
										<span class="invalid-feedback">{{ trans(errors.email | first) }}</span>
									  </div>
									  <div class="form-group text-center">
									  <button type="submit" class="btn btn-dark">{{ trans('Send') }}</button>
									  </div>
									{{ csrf.field | raw }}
                                </form>
								  </div>
								</div>
							</div>
					</div>
						
				</div>	

		</div>
	</div>
	<!-- /main register -->
	
	</div>

{% endblock %}


{% block endcontent %}
