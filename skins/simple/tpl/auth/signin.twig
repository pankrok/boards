{% extends 'templates/main.twig' %}

{% block content %}
<br />
    <div class="row">
     {% include 'templates/partials/modules.twig' %}
        <div class="col-md-6 offset-md-3">
        <div class="row">
        {% include 'templates/partials/inside-modules.twig' %}
        <div class="col order-1">	
            <div class="card panel-default">
                <div class="card-header">{{ trans('Sign in') }}</div>
                <div class="card-body">
                    <form action="{{ path_for('auth.signin') }}" method="post">
                        <div class="form-group">
                            <label for="login">{{ trans('Login or mail') }}</label>
                            <input type="text" name="login" id="login" placeholder="{{ trans('mail@domain.com') }}" class="form-control {{ errors.login ? 'is-invalid' : ''}}" value="{{ old.login }}">
                        </div>
                        <div class="form-group">
                            <label for="password">{{ trans('Password') }}</label>
                            <input type="password" name="password" id="password"  class="form-control {{ errors.password ? 'is-invalid' : ''}}" value="{{ old.password }}">
                        </div>
                            
                        <button type="submint" class="btn btn-dark">{{ trans('Sign in') }}</button>
                        
                        
                    </form>
                </div>
            </div>
        </div>
        </div>
        </div>
    </div>

{% endblock %}