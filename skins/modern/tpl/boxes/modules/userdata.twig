{% if auth.check %}
<!-- userdata module -->
<div class="box">
    <div class="box-header text-center" >
        <h3>{{ trans('Your statistics') }}</h3>
    </div>
    <div class="box-body">
    <div class="text-center">
      <img src="{{ user.avatar }}" class="rounded-circle mx-auto d-block stat-av" alt="{{ auth.user.username }}">
      <p>{{ user.username | raw}}</p>
    </div>
      <ul class="list-group list-group-flush ">
         <li class="list-group-item py1">{{ trans('Group') }}: <span class="float-right">{{ user.group | raw}}</span></li>
         <li class="list-group-item py1">{{ trans('Reputatnion') }}: <span class="float-right">{{ user.reputation }}</span></li>
         <li class="list-group-item py1">{{ trans('Posts') }}: <span class="float-right">{{ user.posts }}</span></li>
         <li class="list-group-item py1">{{ trans('Last visit') }}: <span class="float-right">{{ auth.user.last_active }}</span></li>
    </ul>
    </div>

</div>
<!-- /userdata module -->
{% endif %}