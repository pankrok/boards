{% extends 'main.twig' %}
{% block content %}
{% embed 'partials/container.twig' %}
{% block container %}
      <div class="box">
        <div class="box-header">
            <span class="close float-right mt1" data-toggle="#signInModal">&times;</span>
            <h3>{{ trans('Sign in') }}</h3>
        </div>
        <div class="box-body">
            <form class="row flex-justify-center" action="{{ path_for('auth.signin') }}" method="post">
			  <div class="col-12">
				<label for="exampleInputEmail1">{{ trans('Login or mail') }}</label>
				<input type="text" name="login" id="login" placeholder="{{ trans('mail@domain.com') }}" class="form-control {{ errors.login ? 'is-invalid' : ''}}" value="{{ old.login }}">
				
			  </div>
			  <div class="col-12">
				<label for="exampleInputPassword1">{{ trans('Password') }}</label>
				<input type="password" name="password" id="password"  class="form-control {{ errors.password ? 'is-invalid' : ''}}" value="{{ old.password }}">
			  </div>
				<!-- <div class="form-group form-check"> -->
				<!-- <input type="checkbox" class="form-check-input" id="exampleCheck1"> -->
				<!-- <label class="form-check-label" for="exampleCheck1">{{ trans('Remember me') }}</label> -->
			  <!-- </div> -->
              <div class="col">
				<button type="submit" class="btn btn-dark">{{ trans('Sign in') }}</button>
              </div>
				{{ csrf.field | raw }}
			</form>
        </div>
        <div class="box-footer text-right">
             <small><a href="{{ path_for('auth.forget.pass') }}">{{ trans('Forget password')}}.</a></small>
        </div>
      </div>
      </div>  
{% endblock %}
{% endembed %}
{% endblock %}