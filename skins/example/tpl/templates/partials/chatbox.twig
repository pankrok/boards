<i class="far fa-comments"></i> <strong>Chat</strong>
<div class="chatbox card-body" style="overflow-y: scroll; height: 300px;">	  
	<ul id="shouts" >	
		{% for shout in chatbox %}
			{% include 'templates/partials/boxes/oneShout.twig' %}
		{% endfor %}  
		<span id="chatend"></span>
	</ul>

<div >
		  <input id="shout-content" type="text" placeholder="{% if auth.check == false %}{{ trans('you have to sign in to chat') }}{% else %}{{ trans('Enter your message here:') }}{% endif %}" {% if auth.check == false %}disabled{% endif %}>
		  <input id="sav" type="hidden" value="{{ auth.user.avatar }}">
		  <input id="suid" type="hidden" value="{{ auth.user.id }}">
		  <input id="sname" type="hidden" value="{{ auth.user.username }}">
		  <div>
			<button {% if auth.check == false %}disabled{% endif %} type="button" id="button-chatbox"><i class="far fa-paper-plane"></i></button>
		  </div>

<script>
	var urlForChatbox = "{{ path_for('postChatbox') }}" 
	var urlForLoadMessages = "{{ path_for('loadChatbox') }}" 
	var urlForChatboxNew = "{{ path_for('checkNewMessage') }}"  
</script>